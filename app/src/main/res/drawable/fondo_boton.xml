<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- apariencia cuando se clickea -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#de5bd2" />
            <corners android:radius="@dimen/tamanio_boton_radio"/>
        </shape>
    </item>

    <!-- apariencia cuando se inhabilita el botÃ³n  -->
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#303f8f" />
            <corners android:radius="@dimen/tamanio_boton_radio"/>
        </shape>
    </item>

    <!-- apariencia en reposo -->
    <item>
        <shape>
            <gradient android:startColor="#ddbfdf"
                android:endColor="#2c26da"
                android:angle="270"/>
            <corners android:radius="@dimen/tamanio_boton_radio"/>
        </shape>
    </item>

</selector>